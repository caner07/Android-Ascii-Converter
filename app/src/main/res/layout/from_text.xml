<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FCFCFC"
    android:backgroundTint="#0064DD17"
    tools:context=".FromText">

    <EditText
        android:id="@+id/editText"
        android:layout_width="329dp"
        android:layout_height="67dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Metin Giriniz"
        android:inputType="none"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/firstText"
        android:layout_width="282dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:hint="Metinin Binary Karşılığı"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/first" />

    <TextView
        android:id="@+id/octText"
        android:layout_width="282dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:hint="Sekizlik Sayı Tabanı Karşılığı"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/firstText" />

    <TextView
        android:id="@+id/hexText"
        android:layout_width="282dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:hint="16'lık Sayı Tabanı Karşılığı"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/octText" />

    <TextView
        android:id="@+id/asciiText"
        android:layout_width="282dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:hint="ASCII Kodu"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/hexText" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="25dp"
        android:background="#00BFA5"
        android:onClick="convert"
        android:text="ÇEVİR"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/firstText"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="#00BFA5"
        android:gravity="center"
        android:text="OKTAL"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#CD0E0D0D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/first"
        app:layout_constraintTop_toBottomOf="@+id/first" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="#00BFA5"
        android:gravity="center"
        android:text="HEX"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#CD0E0D0D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/first"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="#00BFA5"
        android:gravity="center"
        android:text="ASCII"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#CD0E0D0D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/asciiText"
        app:layout_constraintStart_toStartOf="@+id/first"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/first"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="208dp"
        android:background="#00BFA5"
        android:gravity="center"
        android:text="BINARY"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#CD0E0D0D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="91dp"
        android:layout_height="57dp"
        android:onClick="turn"
        android:src="@drawable/turn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>